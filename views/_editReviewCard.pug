  //-       a.edit.btn.btn--green.btn--small(type='button' data-review-id=review.id) Details
  .card.cardReview
    .card__header
      .card__picture
        .card__picture-overlay &nbsp;
        img.card__picture-img(src=`img/tours/${review.tour.imageCover}`, alt='Tour 1')
      h3.heading-tertirary
        span= review.tour.name
    .card__details.edit__text
      h4.card__sub-heading Your review
      p.card__text= review.review
    .rating
      .reviews__rating
        each star, index in [1, 2, 3, 4, 5]
          svg.reviews__star(data-review-id=review.id data-star-index=index class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
            use(xlink:href='/img/icons.svg#icon-star')

    .card__footer
      a.edit.btn.btn--green.btn--small(type='button' data-review-id=review.id) Details